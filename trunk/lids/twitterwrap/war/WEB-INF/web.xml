<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<listener>
		<listener-class>edu.kit.aifb.lids.twitterwrap.Listener</listener-class>
	</listener>

	<servlet>
		<servlet-name>timeline</servlet-name>
		<servlet-class>edu.kit.aifb.lids.twitterwrap.TimelineServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>tweets</servlet-name>
		<servlet-class>edu.kit.aifb.lids.twitterwrap.TweetsServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>users</servlet-name>
		<servlet-class>edu.kit.aifb.lids.twitterwrap.UsersServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>search</servlet-name>
		<servlet-class>edu.kit.aifb.lids.twitterwrap.SearchServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>timeline</servlet-name>
		<url-pattern>/statuses/user_timeline</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>timeline</servlet-name>
		<url-pattern>/statuses/public_timeline</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>tweets</servlet-name>
		<url-pattern>/statuses/show/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>users</servlet-name>
		<url-pattern>/users/show</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
