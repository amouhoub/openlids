<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>LinkedIn API LIDS Wrapper</display-name>
    <servlet>
        <servlet-name>UserAuthServlet</servlet-name>
        <servlet-class>org.openlids.lids.linkedin.UserAuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAuthorizedServlet</servlet-name>
        <servlet-class>org.openlids.lids.linkedin.UserAuthorizedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PassCredentialsServlet</servlet-name>
        <servlet-class>org.openlids.lids.linkedin.PassCredentialsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestWrapperServlet</servlet-name>
        <servlet-class>org.openlids.lids.linkedin.TestWrapperServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAuthServlet</servlet-name>
        <url-pattern>/user_auth/authorize</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAuthorizedServlet</servlet-name>
        <url-pattern>/user_auth/authorized</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PassCredentialsServlet</servlet-name>
        <url-pattern>/profile/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PassCredentialsServlet</servlet-name>
        <url-pattern>/public/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PassCredentialsServlet</servlet-name>
        <url-pattern>/me/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestWrapperServlet</servlet-name>
        <url-pattern>/test_wrapper</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
