<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>org.openlids.demo.Listener</listener-class>
    </listener>
    <servlet>
        <servlet-name>AnnotatorServlet</servlet-name>
        <servlet-class>org.openlids.demo.AnnotatorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CachingServlet</servlet-name>
        <servlet-class>org.openlids.demo.CachingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnnotatorServlet</servlet-name>
        <url-pattern>/annotator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CachingServlet</servlet-name>
        <url-pattern>/CachingServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
